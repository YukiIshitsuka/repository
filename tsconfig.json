{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6"
		],
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"downlevelIteration":true,
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.tests.ts",
		"**/tests/*"
	]
}